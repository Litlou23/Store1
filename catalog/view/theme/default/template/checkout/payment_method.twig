<link href="catalog/view/theme/default/stylesheet/stylesheet.css" rel="stylesheet">
<div id="payment-method-form">
    <div class="form-row">
        <input type="hidden" name="payment_method" id="payment_method" value="stripe">
        <div class="col-xs-12 col-md-6">
            <label for="card-element">
            Credit/Debit Card:
            </label>
            <div id="card-element">
            <!-- A Stripe Element will be inserted here. -->
            </div>
            <!-- Used to display form errors. -->
            <div id="card-errors" role="alert"></div>
        </div>
        <div class="col-xs-12 col-lg-2">
            <div class="visible-xs visible-sm"><br></div>
            <button class="btn btn-primary" id="payment-method-confirm">Continue</button>
        </div>
        <script src="catalog/view/javascript/card.js" type="text/javascript"></script>
    </div>
    <div class="form-row tos-row">
        {% if text_agree %}	
            <div class="buttons">	
            <div class="pull-right">{{ text_agree }}	
                {% if agree %}	
                <input type="checkbox" name="agree" value="1" checked="checked" />	
                {% else %}	
                <input type="checkbox" name="agree" value="1" />	
                {% endif %}	
            </div>	
            </div>	
        {% endif %}
    </div>
</div>